extends ../sample/_default

block tools
	include ../utils/_mixins

block title
	title Каталог категорий

block main
	section.block.block-catalog
		.container 
			nav.breadcrumbs(data-aos="fade" data-aos-delay="500") 
				ul 
					li 
						a(href="index.html") Главная
					li 
						a(href="index.html") Каталог
			.heading(data-aos="fade" data-aos-delay="850") 
				h1.title Каталог
			.block-catalog__main
				.box-input(data-aos="fade" data-aos-delay="850") 
					button(type="submit")
						<svg class="icon" width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M8.15625 14.5625C11.4182 14.5625 14.0625 11.9182 14.0625 8.65625C14.0625 5.39432 11.4182 2.75 8.15625 2.75C4.89432 2.75 2.25 5.39432 2.25 8.65625C2.25 11.9182 4.89432 14.5625 8.15625 14.5625Z" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/><path d="M12.332 12.8328L15.7493 16.2501" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/></svg>
					input(type="text" placeholder="Поиск по всему каталогу")

				.block-catalog__grid-cards(data-aos="fade" data-aos-delay="1200")
					-for(i = 0; i < 4; i++)
						a.card(href="catalog-products.html")
							img.icon.card__image(src="./img/catalog/img1.png" alt="")
							.card__box 
								.card__content 
									h4.card__title Инструменты
									p.card__text 148 позиций
								button.card__btn(type="button")
									<svg class="icon" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2.8125 9H15.1875" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/><path d="M10.125 3.9375L15.1875 9L10.125 14.0625" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/></svg>
						a.card(href="catalog-products.html")
							img.icon.card__image(src="./img/catalog/img2.png" alt="")
							.card__box 
								.card__content 
									h4.card__title Пена, герметики, жидкий клей
									p.card__text 148 позиций
								button.card__btn(type="button")
									<svg class="icon" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2.8125 9H15.1875" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/><path d="M10.125 3.9375L15.1875 9L10.125 14.0625" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/></svg>
						a.card(href="catalog-products.html")
							img.icon.card__image(src="./img/catalog/img3.png" alt="")
							.card__box 
								.card__content 
									h4.card__title Металлопрокат
									p.card__text 153 позиций
								button.card__btn(type="button")
									<svg class="icon" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2.8125 9H15.1875" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/><path d="M10.125 3.9375L15.1875 9L10.125 14.0625" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/></svg>
